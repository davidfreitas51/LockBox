@model RegisteredAccount
@{
    Layout = "_LayoutVault";
}

<body>
    <div class="form-container">
        <form asp-controller="Vault" asp-action="NewItem" method="post">
            <div class="form-group">
                <label for="exampleInputTitle">Title</label>
                <input asp-for="Title" type="text" class="form-control" id="exampleInputTitle" placeholder="Enter title">
                <small id="titleHelp" class="form-text text-muted">That's what will appear on your vault</small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Username/E-mail</label>
                <input asp-for="Username" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>