@model UserRegisterRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="/docs/5.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="styles.css" rel="stylesheet">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center" style="height: 75vh;">
        <main class="form-signin w-25">
            <form asp-action="CreateAccount" asp-controller="Home" method="post">
                <h1 class="h3 mb-3 fw-normal">Create an account</h1>

                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label>Email address</label>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label>Master password</label>
                </div>
                <small>Important: Master passwords cannot be recovered if you forget it! 12 character minimum</small>
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Confirm your password</label>
                </div>
                <br />
                <button class="btn btn-primary w-100 py-2" type="submit">Create</button>

                @if (ViewBag.Errors != null)
                {
                    <p style="color: red;">@ViewBag.Errors</p>
                }

            </form>
        </main>
    </div>
    <script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
